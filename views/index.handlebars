

<div class="container">
  <div class="row">
    <div class="left col-md-4">
      <h2>Burgers</h2>
      <ul>
        {{#each burgers}} 
            {{#unless devoured}} 
                {{> burgers/burger-block devoured=true}} 
            {{/unless}} 
        {{/each}}
      </ul>
    </div>
    
    <div class="text-center col-md-4">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="burger">Please Enter a Burger You'd Like to Eat:<br/></label>
          <input type="text" id="burger" name="burgername">
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>

    <div class="right col-md-4">
      <h2>Burgers Devoured</h2>
      <ul>
        {{#each burgers}} 
            {{#if devoured}} 
                {{> burgers/burger-block devoured=false}} 
            {{/if}} 
        {{/each}}
      </ul>
    </div>
  </div>
</div>