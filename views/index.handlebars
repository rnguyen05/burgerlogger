

<div id="main-container" class="container">
  <div class="row">
    <div class="left col-md-4">
      <h2>Burgers Ordered</h2>
      <ul>
        {{#each burgers}} 
            {{#unless devoured}}      
                {{> burgers/burger-block devoured=true}} 
            {{/unless}} 
        {{/each}}
      </ul>
    </div>
    
    <div class="text-center col-md-4">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="burger">What would you like to order?<br/></label>
          <input type="text" id="burger" class="form-control" name="burgername" placeholder="Chicken Bacon Burger" required>
        </div>
        <button type="submit" class="btn btn-secondary">Submit Order</button>
      </form>
    </div>

    <div class="right col-md-4">
      <h2>Burgers Devoured</h2>
      <ul>
        {{#each burgers}} 
            {{#if devoured}} 
                <strike>{{> burgers/burger-block devoured=false}}</strike>
            {{/if}} 
        {{/each}}
      </ul>
    </div>
  </div>
</div>